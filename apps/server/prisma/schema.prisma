datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id        String   @id @default(cuid())
  name      String
  date      DateTime
  photos    Photo[]
  createdAt DateTime @default(now())
}

model Photo {
  id         String   @id @default(cuid())
  eventId    String
  event      Event    @relation(fields: [eventId], references: [id])
  filename   String
  mimeType   String
  width      Int?
  height     Int?
  storageKey String    // S3 key ou chemin local
  qrSlug     String    @unique
  email      String?
  printed    Boolean   @default(false)
  createdAt  DateTime  @default(now())
}

