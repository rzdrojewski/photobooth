{
  "name": "photobooth",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "version": "0.1.0",
  "scripts": {
    "dev:server": "pnpm -C apps/server dev",
    "dev:client": "pnpm -C apps/client dev",
    "build:server": "pnpm -C apps/server build",
    "build:client": "pnpm -C apps/client build",
    "build": "pnpm build:server && pnpm build:client",
    "lint": "echo 'Add ESLint configs per app'",
    "typecheck": "pnpm -C apps/server typecheck && pnpm -C apps/client typecheck"
  }
}
